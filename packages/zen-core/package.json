{
  "name": "@sylph/core",
  "version": "0.1.0",
  "description": "Core package for the zen state management library.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "bench": "vitest bench --run",
    "bench:watch": "vitest bench",
    "size": "size-limit",
    "lint": "echo 'Lint script not implemented yet'"
  },
  "size-limit": [
    {
      "name": "zen (atom only)",
      "path": "dist/index.js",
      "import": "{ atom }",
      "limit": "3.0 kB"
    },
    {
      "name": "zen (full)",
      "path": "dist/index.js",
      "import": "{ atom, computed, map, deepMap, task, batch, onMount, subscribe, get }",
      "limit": "3.5 kB"
    }
  ],
  "keywords": [
    "state",
    "store",
    "state management",
    "atom",
    "reactive",
    "minimal",
    "tiny",
    "nanostores"
  ],
  "author": "Sylph Lab <hi@sylphlab.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sylphlab/zen.git"
  },
  "homepage": "https://github.com/sylphlab/zen#readme",
  "bugs": {
    "url": "https://github.com/sylphlab/zen/issues"
  },
  "devDependencies": {},
  "dependencies": {}
}