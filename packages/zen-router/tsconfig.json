{
  // Removed "extends": "../../tsconfig.base.json"
  "compilerOptions": {
    // Copied necessary options from tsconfig.base.json
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "module": "ESNext",
    "moduleResolution": "Bundler", // Explicitly set
    "lib": ["esnext", "dom", "dom.iterable"],
    "declaration": true,
    "sourceMap": false,
    "declarationMap": false,
    "inlineSources": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", // Added for paths resolution
    "paths": {
      "@sylphlab/zen-core": ["../zen-core/dist/index.d.ts"], // Map to built types
      "@sylphlab/zen-core/*": ["../zen-core/dist/*"] // Map to built types wildcard
    },

    // Package-specific options
    // No composite needed here unless other packages depend on it
    // "emitDeclarationOnly": true, // Removed - tsup handles JS build, tsc handles core declarations
    "declarationDir": "dist", // Output .d.ts files directly to dist
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.bench.ts"]
}