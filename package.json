{
  "name": "zen",
  "version": "0.0.1",
  "description": "Minimal, fast state management library inspired by Nanostores.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --minify --sourcemap",
    "test": "vitest run",
    "test:watch": "vitest",
    "bench": "vitest bench --run",
    "bench:watch": "vitest bench",
    "size": "size-limit"
  },
  "size-limit": [
    {
      "name": "zen",
      "path": "dist/index.js",
      "import": "{ atom }",
      "limit": "1 kB" 
    },
    {
      "name": "nanostores",
      "path": "node_modules/nanostores/index.js",
      "import": "{ atom }",
      "limit": "1 kB" 
    }
  ],
  "keywords": [
    "state",
    "store",
    "state management",
    "atom",
    "reactive",
    "minimal",
    "tiny",
    "nanostores"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.2",
    "esbuild": "^0.25.2",
    "gzip-size-cli": "^5.1.0",
    "jotai": "^2.12.3",
    "jsdom": "^26.1.0",
    "nanostores": "^1.0.1",
    "react": "^19.1.0",
    "size-limit": "^11.2.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  }
}
