{
  "name": "zen-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "description": "Monorepo for the zen state management library and related packages.",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "bench": "turbo run bench",
    "lint": "biome lint",
    "lint:fix": "biome lint --fix",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "bunx turbo run build --filter=\\\"./packages/*\\\" && bunx changeset publish",
    "docs": "typedoc --entryPointStrategy packages --out docs packages/zen-core packages/zen-router"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@reduxjs/toolkit": "^2.7.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.2",
    "@vitest/coverage-v8": "^3.1.2",
    "effector": "^23.3.0",
    "esbuild": "^0.25.2",
    "gzip-size-cli": "^5.1.0",
    "jotai": "^2.12.3",
    "jsdom": "^26.1.0",
    "nanostores": "^1.0.1",
    "react": "^19.1.0",
    "rimraf": "^6.0.1",
    "size-limit": "^11.2.0",
    "terser": "^5.39.0",
    "tsup": "^8.4.0",
    "turbo": "^2.5.0",
    "typedoc": "^0.28.3",
    "typescript": "^5.8.3",
    "valtio": "^2.1.4",
    "vitest": "^3.1.2",
    "zustand": "^5.0.3"
  },
  "dependencies": {
    "@biomejs/biome": "^1.9.4",
    "@sylphlab/biome-config": "^0.2.0",
    "lefthook": "^1.11.11"
  }
}
