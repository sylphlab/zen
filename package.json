{
  "name": "zen-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Monorepo for the zen state management library and related packages.",
  "type": "module",
  "packageManager": "bun@1.2.9",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "bench": "turbo run bench",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "bunx turbo run build --filter=\\\"./packages/*\\\" && bunx changeset publish",
    "docs": "typedoc --entryPointStrategy packages --out docs packages/zen-core packages/zen-router"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@reduxjs/toolkit": "^2.6.1",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitest/coverage-v8": "^3.1.1",
    "effector": "^23.3.0",
    "esbuild": "^0.25.2",
    "eslint": "^9.24.0",
    "gzip-size-cli": "^5.1.0",
    "jotai": "^2.12.3",
    "jsdom": "^26.1.0",
    "nanostores": "^1.0.1",
    "prettier": "^3.3.3",
    "react": "^19.1.0",
    "size-limit": "^11.2.0",
    "terser": "^5.39.0",
    "tsup": "^8.4.0",
    "turbo": "^2.5.0",
    "typedoc": "^0.28.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "valtio": "^2.1.4",
    "vitest": "^3.1.1",
    "zustand": "^5.0.3"
  }
}
